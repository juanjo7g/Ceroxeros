<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ceroxeros.view.fragments.IniciarSesionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivIcono"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/etFragmentIniciarSesionUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivIcono"
            android:hint="Nombre de Usuario"
            android:inputType="text" />

        <EditText
            android:id="@+id/etFragmentIniciarSesionContrase침a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etFragmentIniciarSesionUsuario"
            android:layout_marginTop="16dp"
            android:hint="Contrase침a"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnFragmentIniciarSesionIniciar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etFragmentIniciarSesionContrase침a"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            android:padding="12dp"
            android:text="Iniciar Sesi칩n"
            android:textColor="@color/colorWhite" />


        <TextView
            android:id="@+id/tokentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/hello_blank_fragment" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonCrearUsuario"
            android:layout_marginTop="24dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/sign_in_button"
            android:layout_alignTop="@+id/sign_in_button"
            android:layout_marginLeft="24dp"
            android:layout_toEndOf="@+id/sign_in_button"
            android:layout_toRightOf="@+id/sign_in_button" />

        <Button
            android:id="@+id/buttonCrearUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnFragmentIniciarSesionIniciar"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            android:text="Crear Usuario"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/login_button"
            android:layout_marginLeft="24dp"
            android:layout_toEndOf="@+id/login_button"
            android:layout_toRightOf="@+id/login_button"
            android:background="@color/colorGray"
            android:text="Sign out"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</ScrollView>
